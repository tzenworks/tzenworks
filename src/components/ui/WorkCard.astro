---
import type { CollectionEntry } from "astro:content";

// components
const { entry } = Astro.props;

type Props = {
    entry: CollectionEntry<"work">;
};

const { title, slug, heroImage } = entry.data;
---

<article aria-label={title} class="relative overflow-hidden">
    <a href=`/work/${slug}`>
        <div
            class="h-96 bg-cover bg-center bg-no-repeat bg-hvit"
            style=`background-image: url(${heroImage.src})`
        >
        </div>
    </a>
    <a href=`/work/${slug}`>
        <div class="p-4">
            <h3 class="font-display text-3xl">
                {title}
            </h3>
        </div>
    </a>
</article>

