---
import { getCollection } from "astro:content";

import Card from "@/components/ui/WorkCard.astro";

const entires = await getCollection("work");
---

<div
    class="grid-wrapper grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6 pt-8 pr-8 pl-2"
>
    {
        entires.map((entry) => (
            <>
                <Card entry={entry} />
            </>
        ))
    }
</div>

